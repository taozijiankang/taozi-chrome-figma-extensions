{
  "manifest_version": 3,
  "name": "taozi-chrome-extensions-mcp-figma-reader",
  "version": "1.0.0",
  "description": "通过 MCP 协议读取 Figma 设计文件的 Chrome 扩展",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.figma.com/*",
    "https://api.figma.com/*",
    "https://file.jk.100cbc.com/*",
    "https://api.tinypng.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.figma.com/*"
      ],
      "js": [
        "content.js",
        "mcp-task-executor.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "key": ""
}