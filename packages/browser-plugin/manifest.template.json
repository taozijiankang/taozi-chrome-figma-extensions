{
  "manifest_version": 3,
  "name": "MCP Figma 链接读取工具",
  "version": "1.0.0",
  "description": "通过 MCP 协议读取 Figma 设计文件的 Chrome 扩展",
  "_comment_key": "要固定扩展 ID，请运行 'node generate-key.js' 生成 key，然后取消下面的注释并填入公钥",
  "_key": "YOUR_PUBLIC_KEY_HERE",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://*.figma.com/*",
    "https://api.figma.com/*",
    "https://file.jk.100cbc.com/*",
    "https://api.tinypng.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.figma.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

